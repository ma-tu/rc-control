<div class="rc-panel">
    <div class="row">
        <button id="forward" type="button" class="operator btn btn-success col-xs-4 col-xs-offset-4">
            まえ
        </button>
    </div>

    <div class="row">
        <button id="left" type="button" class="operator btn btn-success col-xs-4">
            ひだり
        </button>
        <button id="right" type="button" class="operator btn btn-success col-xs-4 col-xs-offset-4">
            みぎ
        </button>
    </div>

    <div class="row">
        <button id="back" type="button" class="operator btn btn-success col-xs-4 col-xs-offset-4">
            うしろ
        </button>
    </div>
</div>

<div class="row">
    <iframe src="http://pi.local:8080/stream_simple.html" class="screen col-xs-10 col-xs-offset-1"></iframe>
</div>

<script>
    $('.operator')
            .on('mousedown', function (e) {
                rc(e.target.id);
            })
            .on('touchstart', function (e) {
                rc(e.target.id);
            });
    $('.rc-panel')
            .on('mouseup', function () {
                rc('stop');
            })
            .on('touchend', function () {
                rc('stop');
            });
</script>
